{
    "name": "HLTV Sports mode",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "Acivating Hltv sports mode when entering the site. This hides all comments and the forum",
    "browser_action": {
        "default_title": "HLTV Sports mode"
    },
    "icons": {
        "16": "/images/logo16.png",
        "48": "/images/logo48.png",
        "128": "/images/logo128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.hltv.org/*"
            ],
            "js": [
                "/styling/styles.js"
            ]
        }
    ]
}